{% extends 'base.html.twig' %}

{% block title %}Liste des serveurs de jeu{% endblock %}

{% block body %}
<div class="container mt-4">

    <h1>Liste des serveurs de jeu</h1>

    {% for message in app.flashes("success") %}
      <div class="alert alert-success">
        {{ message }}
      </div>
    {% endfor %}

    {% for message in app.flashes("danger") %}
      <div class="alert alert-danger">
        {{ message }}
      </div>
    {% endfor %}

    <a class="btn btn-success" href="{{ path('game_new') }}">Ajouté un nouveau serveur de jeu</a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Serveur</th>
                <th>Type</th>
                <th>Etat</th>
                <th>Date de création</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.name }}</td>
                <td>{{ game.server.name }}</td>
                <td>{{ game.game }}</td>
                <td>{{ game.state }}</td>
                <td>{{ game.createdAt|date('d/m/Y') }}</td>
                <td>
                    <div class="row justify-content-start">
                        <div class="col-auto">
                            <a class="btn btn-warning" href="{{ path('game_edit', {'id': game.id}) }}">Editer</a>
                        </div>
                        <div class="col-auto">
                            {{ include('game/_delete_form.html.twig') }}
                        </div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('game_new') }}">Ajouté un nouveau serveur de jeu</a>
</div>
{% endblock %}
