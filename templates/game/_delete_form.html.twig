<form method="post" action="{{ path('game_delete', {'id': game.id}) }}" onsubmit="return confirm('{{ 'Are you sure you want to delete this game server ?'|trans }}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ game.id) }}">
    <button class="btn btn-danger">{{ 'Delete'|trans }}</button>
</form>
