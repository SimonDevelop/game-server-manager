{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
<div class="container mt-4">

    <h1>Liste des utilisateurs</h1>

    <a class="btn btn-success" href="{{ path('user_new') }}">Ajouté un nouvel utilisateur</a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Role</th>
                <th>Date de création</th>
                <th>Serveurs</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>
                    {% if user.roles[0] == "ROLE_ADMIN" %}
                        Admin
                    {% else %}
                        User
                    {% endif %}
                </td>
                <td>{{ user.createdAt|date('d/m/Y') }}</td>
                <td>
                    <button type="button" class="btn btn-secondary"
                            data-bs-toggle="popover" data-bs-placement="top" data-bs-html="true"
                            data-bs-content="
                            {% for gameServer in user.gameServers %}{{ gameServer.name }}<br>{% endfor %}
                            {% if user.gameServers is empty %}Aucun serveur{% endif %}
                            ">
                    Voir les serveurs
                    </button>
                </td>
                <td>
                    <div class="row justify-content-start">
                        <div class="col-auto">
                        <a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">Editer</a>
                        </div>
                        <div class="col-auto">
                        {{ include('user/_delete_form.html.twig') }}
                        </div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('user_new') }}">Ajouté un nouvel utilisateur</a>
</div>
{% endblock %}
