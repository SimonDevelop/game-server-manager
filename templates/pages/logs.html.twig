{% extends "base.html.twig" %}
{% block title "Home" %}
{% block body %}

<div class="container mt-4">
    <h2 class="text-center">Historique des logs</h2>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Action</th>
                <th>Auteur</th>
                <th>Etat</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            {% for log in logs %}
                <tr>
                <td>{{ log.action }} ({{ log.gameServer.name }})</td>
                <td>
                    {% if log.user is null %}
                        System
                    {% else %}
                        {{ log.user.username }}
                    {% endif %}
                </td>
                <td>
                    {% if log.state == true %}
                    <span class="badge rounded-pill text-bg-success">success</span>
                    {% elseif log.state == false %}
                    <span class="badge rounded-pill text-bg-danger">failed</span>
                    {% endif %}
                </td>
                <td>{{ log.createdAt|date('d/m/Y H:i:s') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% if logsTotal > 1 %}
        {{ logsTotal }} results
    {% elseif logsTotal <= 1 %}
        {{ logsTotal }} result
    {% endif %}

    {% if nbPage > 1 %}
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
            {% if page > 1 %}
                <li class="page-item">
                <a class="page-link" href="{{ path('logs_index', { 'page': 1 }) }}"><<</a>
                </li>
                <li class="page-item">
                <a class="page-link" href="{{ path('logs_index', { 'page': page-1 }) }}">Précédent</a>
                </li>
            {% endif %}

            {% if page > 1 %}
                {% for i in 3..1 %}
                {% if page-i > 0 %}
                    {% if i == 3 and page-i > 1 %}
                    <li class="page-item">
                        <a class="page-link">...</a>
                    </li>
                    {% endif %}
                    <li class="page-item">
                    <a class="page-link" href="{{ path('logs_index', { 'page': page-i }) }}">{{ page-i }}</a>
                    </li>
                {% endif %}
                {% endfor %}
            {% endif %}
            <li class="page-item active">
                <a class="page-link">{{ page }}</a>
            </li>
            {% if page < nbPage %}
                {% for i in 1..3 %}
                {% if page+i < nbPage+1 %}
                    <li class="page-item">
                    <a class="page-link" href="{{ path('logs_index', { 'page': page+i }) }}">{{ page+i }}</a>
                    </li>
                    {% if i == 3 and page+i < nbPage %}
                    <li class="page-item">
                        <a class="page-link">...</a>
                    </li>
                    {% endif %}
                {% endif %}
                {% endfor %}
            {% endif %}

            {% if page < nbPage %}
                <li class="page-item">
                <a class="page-link" href="{{ path('logs_index', { 'page': page+1 }) }}">Suivant</a>
                </li>
                <li class="page-item">
                <a class="page-link" href="{{ path('logs_index', { 'page': nbPage }) }}">>></a>
                </li>
            {% endif %}
            </ul>
        </nav>
    {% endif %}

    {% if nbPage > 1 %}
        {{ nbPage }} pages
    {% elseif nbPage <= 1 %}
        {{ nbPage }} page
    {% endif %}

</div>
{% endblock %}
