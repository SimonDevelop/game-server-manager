<form method="post" action="{{ path('server_delete', {'id': server.id}) }}" onsubmit="return confirm('{{ 'Are you sure you want to remove this server?'|trans }}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ server.id) }}">
    <button class="btn btn-danger">{{ 'Delete'|trans }}</button>
</form>
